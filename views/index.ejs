<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body class="container">

    <h1 class="text-center my-4">Country Information</h1>

    <div class="text-center mb-4">
        <a href="/countries" class="btn btn-success">Countries Information</a>
    </div>

    <% if (countries) { %>
        <div class="row">
            <% countries.forEach(c => { %>
                <div class="col-md-6 offset-md-3 mb-4">
                    <div class="border p-3">
                        <div class="row">
                            <div class="col-md-8">
                                <h5><strong>Country Name:</strong> <%= c.name.official %></h5>
                                <div class="border p-2">
                                    <p><strong>Capital</strong>   : <%= c.capital ? c.capital[0] : "N/A" %></p>
                                    <p><strong>Region</strong>    : <%= c.region %></p>
                                    <p><strong>Population</strong>: <%= c.population.toLocaleString() %></p>
                                </div>
                            </div>
                            <div class="col-md-4 text-center">
                                <p><strong>Country Flag:</strong></p>
                                <% if (c.flags && c.flags.png) { %>
                                    <img src="<%= c.flags.png %>" alt="Flag of <%= c.name.common %>" class="img-fluid" style="max-height: 100px;">
                                <% } else { %>
                                    <p>N/A</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>

    <%- include('partials/footer') %>
</body>
</html>
